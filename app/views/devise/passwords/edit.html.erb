<%= render_crud do %>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal" }) do |f| %>
	<%= f.error_notification %>
	<%= f.input :reset_password_token, :as => :hidden %>
	<%= f.full_error :reset_password_token %>
	<%= f.input :password, :label => "Nova senha", :required => true, :autofocus => true %>
	<%= f.input :password_confirmation, :label => "Confirmar nova senha", :required => true %>
	<div class="form-group">
		<div class="col-sm-4 col-sm-offset-2">
			<%= f.submit "Salvar", class: 'btn btn-primary' %>
		</div>
	</div>
	<% end %>
<% end %>